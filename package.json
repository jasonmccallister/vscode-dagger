{
  "name": "vscode-dagger",
  "displayName": "vscode-dagger",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/dagger.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonmccallister/vscode-dagger"
  },
  "activationEvents": [
    "workspaceContains:**dagger.json",
    "onChatParticipant:dagger"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "dagger",
        "name": "dagger",
        "fullName": "Dagger",
        "description": "Searches docs.dagger.io for information on developing Dagger modules"
      }
    ],
    "commands": [
      {
        "command": "dagger.init",
        "title": "Initialize Project",
        "category": "Dagger",
        "shortTitle": "Init"
      },
      {
        "command": "dagger.develop",
        "title": "Develop local modules",
        "category": "Dagger",
        "shortTitle": "Develop"
      },
      {
        "command": "dagger.call",
        "title": "Functions call",
        "category": "Dagger",
        "shortTitle": "Call"
      },
      {
        "command": "dagger.functions",
        "title": "Functions view",
        "category": "Dagger",
        "shortTitle": "Functions"
      },
      {
        "command": "dagger.install",
        "title": "Install Dagger CLI",
        "category": "Dagger",
        "shortTitle": "Install"
      },
      {
        "command": "dagger.installModule",
        "title": "Install a module",
        "category": "Dagger",
        "shortTitle": "Install Module"
      },
      {
        "command": "dagger.setupCloud",
        "title": "Setup Cloud",
        "category": "Dagger",
        "shortTitle": "Setup Cloud"
      },
      {
        "command": "dagger.uninstall",
        "title": "Uninstall",
        "category": "Dagger",
        "shortTitle": "Uninstall"
      },
      {
        "command": "dagger.version",
        "title": "Show version",
        "category": "Dagger",
        "shortTitle": "Version"
      },
      {
        "command": "dagger.update",
        "title": "Check for updates",
        "category": "Dagger",
        "shortTitle": "Update"
      },
      {
        "command": "dagger.resetPreferences",
        "title": "Reset preferences",
        "category": "Dagger",
        "shortTitle": "Reset"
      },
      {
        "command": "dagger.shell",
        "title": "Open a shell",
        "category": "Dagger",
        "shortTitle": "Shell"
      },
      {
        "command": "dagger.chat.searchDocs",
        "title": "Search docs",
        "category": "Dagger",
        "shortTitle": "Search"
      }
    ],
    "configuration": {
      "title": "Dagger",
      "properties": {
        "dagger.installMethod": {
          "type": "string",
          "enum": [
            "brew",
            "curl"
          ],
          "enumDescriptions": [
            "Use Homebrew package manager (recommended for macOS/Linux)",
            "Use curl installation script"
          ],
          "default": "brew",
          "description": "Method to use when installing Dagger CLI",
          "scope": "window"
        },
        "dagger.cloudNotificationDismissed": {
          "type": "boolean",
          "default": false,
          "description": "Whether the Dagger Cloud setup notification has been permanently dismissed",
          "scope": "application"
        },
        "dagger.autoExecute": {
          "type": "boolean",
          "default": true,
          "description": "Whether to automatically execute commands in the terminal when using Dagger",
          "scope": "window"
        },
        "dagger.experimentalFeatures": {
          "type": "boolean",
          "default": false,
          "description": "Enable experimental features like chat participant and AI assistance",
          "scope": "window"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "dagger",
        "required": [
          "function"
        ],
        "properties": {
          "function": {
            "type": "string",
            "description": "The Dagger function name to run"
          },
          "args": {
            "type": "array",
            "description": "Arguments metadata for the function"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "dagger-matcher",
        "owner": "dagger",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^Error:\\s+(.*)$",
          "message": 1
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "daggerViewContainer",
          "title": "Dagger",
          "icon": "images/dagger-white.png"
        }
      ]
    },
    "views": {
      "daggerViewContainer": [
        {
          "id": "daggerTreeView",
          "name": "Dagger Functions",
          "icon": "images/dagger-white.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}