{
  "name": "vscode-dagger",
  "displayName": "vscode-dagger",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/dagger.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonmccallister/vscode-dagger"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dagger.init",
        "title": "Initialize Project",
        "category": "Dagger",
        "shortTitle": "Init"
      },
      {
        "command": "dagger.develop",
        "title": "Develop local dependencies",
        "category": "Dagger",
        "shortTitle": "Develop"
      },
      {
        "command": "dagger.call",
        "title": "Call Functions",
        "category": "Dagger",
        "shortTitle": "Call"
      },
      {
        "command": "dagger.functions",
        "title": "View Functions",
        "category": "Dagger",
        "shortTitle": "Functions"
      },
      {
        "command": "dagger.install",
        "title": "Install the CLI",
        "category": "Dagger",
        "shortTitle": "Install"
      },
      {
        "command": "dagger.installModule",
        "title": "Install a Module",
        "category": "Dagger",
        "shortTitle": "Install Module"
      },
      {
        "command": "dagger.setupCloud",
        "title": "Setup Cloud",
        "category": "Dagger",
        "shortTitle": "Setup Cloud"
      },
      {
        "command": "dagger.uninstall",
        "title": "Uninstall",
        "category": "Dagger",
        "shortTitle": "Uninstall"
      },
      {
        "command": "dagger.version",
        "title": "Show Version",
        "category": "Dagger",
        "shortTitle": "Version"
      },
      {
        "command": "dagger.resetPreferences",
        "title": "Reset Preferences",
        "category": "Dagger",
        "shortTitle": "Reset"
      },
      {
        "command": "dagger.shell",
        "title": "Open a Shell",
        "category": "Dagger",
        "shortTitle": "Shell"
      }
    ],
    "configuration": {
      "title": "Dagger",
      "properties": {
        "dagger.installMethod": {
          "type": "string",
          "enum": [
            "brew",
            "curl",
            ""
          ],
          "enumDescriptions": [
            "Use Homebrew package manager (recommended for macOS/Linux)",
            "Use curl installation script",
            "No preferred method, will prompt for installation method if Dagger CLI is not found"
          ],
          "default": "brew",
          "description": "Method to use when installing Dagger CLI",
          "scope": "window"
        },
        "dagger.cloudNotificationDismissed": {
          "type": "boolean",
          "default": false,
          "description": "Whether the Dagger Cloud setup notification has been permanently dismissed",
          "scope": "application"
        },
        "dagger.showTerminal": {
          "type": "string",
          "enum": [
            "always",
            "onError"
          ],
          "default": "onError",
          "description": "When to show Dagger output in the terminal: 'always' or only 'onError'",
          "scope": "window"
        },
        "dagger.autoExecute": {
          "type": "boolean",
          "default": true,
          "description": "Whether to automatically execute commands in the terminal when using Dagger",
          "scope": "window"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "dagger",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The Dagger function to run"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}