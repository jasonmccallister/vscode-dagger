{
  "name": "vscode-dagger",
  "displayName": "Dagger",
  "description": "VS Code extension for Dagger - streamline your containerized CI/CD workflows with intelligent function management",
  "version": "0.0.1",
  "publisher": "jasonmccallister",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "keywords": [
    "dagger",
    "ci",
    "cd",
    "containers",
    "docker",
    "pipelines",
    "devops",
    "workflows",
    "functions",
    "mcp",
    "terminal"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonmccallister/vscode-dagger"
  },
  "bugs": {
    "url": "https://github.com/jasonmccallister/vscode-dagger/issues"
  },
  "homepage": "https://github.com/jasonmccallister/vscode-dagger#readme",
  "license": "MIT",
  "activationEvents": [
    "workspaceContains:**dagger.json",
    "onChatParticipant:dagger"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dagger.init",
        "title": "Initialize Project",
        "category": "Dagger",
        "shortTitle": "Init"
      },
      {
        "command": "dagger.develop",
        "title": "Develop Local Modules",
        "category": "Dagger",
        "shortTitle": "Develop"
      },
      {
        "command": "dagger.call",
        "title": "Call Function",
        "icon": "$(play)",
        "category": "Dagger",
        "shortTitle": "Call"
      },
      {
        "command": "dagger.clearCache",
        "title": "Clear Cache",
        "icon": "$(trash)",
        "category": "Dagger",
        "shortTitle": "Clear Cache"
      },
      {
        "command": "dagger.export",
        "title": "Export File or Directory",
        "icon": "$(file-export)",
        "category": "Dagger",
        "shortTitle": "Export"
      },
      {
        "command": "dagger.saveTask",
        "title": "Save as Task",
        "icon": "$(save)",
        "category": "Dagger",
        "shortTitle": "Save Task"
      },
      {
        "command": "dagger.functions",
        "title": "View Functions",
        "category": "Dagger",
        "shortTitle": "Functions"
      },
      {
        "command": "dagger.install",
        "title": "Install CLI",
        "category": "Dagger",
        "shortTitle": "Install"
      },
      {
        "command": "dagger.installModule",
        "title": "Install a Module",
        "category": "Dagger",
        "shortTitle": "Install Module"
      },
      {
        "command": "dagger.addMcpModule",
        "title": "Add a Module as MCP server",
        "category": "Dagger",
        "shortTitle": "Add Module MCP"
      },
      {
        "command": "dagger.expose",
        "title": "Expose Service",
        "category": "Dagger",
        "shortTitle": "Expose Service"
      },
      {
        "command": "dagger.setupCloud",
        "title": "Setup Cloud",
        "category": "Dagger",
        "shortTitle": "Setup Cloud"
      },
      {
        "command": "dagger.graphql",
        "title": "Start GraphQL Server",
        "category": "Dagger",
        "shortTitle": "Start GraphQL Server"
      },
      {
        "command": "dagger.terminal",
        "title": "Run in Terminal",
        "category": "Dagger",
        "shortTitle": "Terminal"
      },
      {
        "command": "dagger.uninstall",
        "title": "Uninstall Dagger",
        "category": "Dagger",
        "shortTitle": "Uninstall"
      },
      {
        "command": "dagger.version",
        "title": "Show Version",
        "category": "Dagger",
        "shortTitle": "Version"
      },
      {
        "command": "dagger.update",
        "title": "Check for Updates",
        "category": "Dagger",
        "shortTitle": "Update"
      },
      {
        "command": "dagger.shell",
        "title": "Open a Shell",
        "category": "Dagger",
        "shortTitle": "Shell"
      },
      {
        "command": "dagger.reload",
        "title": "Reload Functions",
        "category": "Dagger",
        "icon": "$(refresh)"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "dagger.terminal-profile",
          "title": "Dagger",
          "name": "Dagger",
          "icon": "images/icon-white.png",
          "isTransient": true,
          "description": "Dagger Shell terminal profile"
        }
      ]
    },
    "configuration": {
      "title": "Dagger",
      "properties": {
        "dagger.alwaysPromptFunctionActions": {
          "type": "boolean",
          "default": true,
          "description": "Whether to always prompt before executing function actions (e.g., export, expose service)",
          "scope": "window"
        },
        "dagger.installMethod": {
          "type": "string",
          "enum": [
            "brew",
            "curl"
          ],
          "enumDescriptions": [
            "Use Homebrew package manager (recommended for macOS/Linux)",
            "Use curl installation script"
          ],
          "default": "brew",
          "description": "Method to use when installing Dagger CLI",
          "scope": "window"
        },
        "dagger.cloudNotificationDismissed": {
          "type": "boolean",
          "default": false,
          "description": "Whether the Dagger Cloud setup notification has been permanently dismissed",
          "scope": "application"
        },
        "dagger.saveTaskPromptDismissed": {
          "type": "boolean",
          "default": false,
          "description": "Whether the save task notification has been permanently dismissed",
          "scope": "application"
        },
        "dagger.enableCache": {
          "type": "boolean",
          "default": true,
          "description": "Enable caching of Dagger functions data. Disabling may increase API calls but ensures data is always fresh.",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "daggerViewContainer",
          "title": "Dagger",
          "icon": "images/icon-white.png"
        }
      ]
    },
    "views": {
      "daggerViewContainer": [
        {
          "id": "daggerTreeView",
          "name": "Functions",
          "icon": "images/icon-white.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dagger.reload",
          "when": "view == daggerTreeView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "dagger.saveTask",
          "when": "view == daggerTreeView && viewItem == function",
          "group": "inline@1"
        },
        {
          "command": "dagger.call",
          "when": "view == daggerTreeView && viewItem == function",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src test",
    "test": "vscode-test",
    "publish": "vsce publish --no-dependencies",
    "publish:ovsx": "ovsx publish --no-dependencies",
    "package:vsix": "vsce package --no-dependencies",
    "format": "yarn run prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"src/**/*.json\" \"src/**/*.md\""
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "glob": "^11.0.3",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.10.0",
    "prettier": "3.6.2",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3"
  }
}
